
public class Tester {
	
private static void determineGender(char gender)
{
	if(gender == 'M')
	{
		System.out.print("It's a Male ");
	}
	else if(gender == 'F'){
	{
		System.out.print("It's a Female");
	}
	else
	{
		System.out.print("Error: Invalid ");
	}
	}
}

