	@Test
	public void testCalculateCost1() 
	{
		ControlFlowPractice test1 = new ControlFlowPractice();
		System.out.println(test1.calculateCost(100));
		assertTrue(test1.calculateCost(10) == 100.0);
	}
	
	public void testCalculateCost2() 
	{
		ControlFlowPractice test1 = new ControlFlowPractice();
		System.out.println(test1.calculateCost(100));
		assertTrue(test1.calculateCost(50) == 100.0);
	}

	public void testCalculateCost3() 
	{
		ControlFlowPractice test1 = new ControlFlowPractice();
		System.out.println(test1.calculateCost(100));
		assertTrue(test1.calculateCost(0) == 100.0);
	}

	public void testCalculateCost4() 
	{
		ControlFlowPractice test1 = new ControlFlowPractice();
		System.out.println(test1.calculateCost(100));
		assertTrue(test1.calculateCost(25) == 50.0);
	}

	public void testCalculateCost5() 
	{
		ControlFlowPractice test1 = new ControlFlowPractice();
		System.out.println(test1.calculateCost(100));
		assertTrue(test1.calculateCost(200) == 100.0);
	}


}
